<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_colorPrimary</item>
        <item name="colorPrimaryDark">@color/app_colorPrimaryDark</item>
        <item name="colorAccent">@color/app_colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="app_MDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <declare-styleable name="FourCornerImageView">
        <attr name="f_corner_radius" format="dimension" />
        <attr name="left_top_radius" format="dimension" />
        <attr name="right_top_radius" format="dimension" />
        <attr name="left_bottom_radius" format="dimension" />
        <attr name="right_bottom_radius" format="dimension" />
    </declare-styleable>

    <style name="run_lab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">86dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:background">@drawable/run_lab_bg</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="android:textColor">@drawable/run_lab_selector</item>
        <item name="android:textSize">15dp</item>
    </style>

    <!-- 多主题 -->
    <style name="Dark">
        <item name="backgroundColor">@color/widget_gray</item>
        <item name="backgroundHeight">80dp</item>
    </style>

    <style name="Day">
        <item name="backgroundColor">@color/app_colorPrimary</item>
        <item name="backgroundHeight">100dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
