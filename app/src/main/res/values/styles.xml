<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_colorPrimary</item>
        <item name="colorPrimaryDark">@color/app_colorPrimaryDark</item>
        <item name="colorAccent">@color/app_colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="myDefaultAttr">@style/AttrStyle</item>
        <item name="myFont">@font/china</item>
    </style>

    <style name="MaterialComponentsTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="StyleShapeAppearanceImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <declare-styleable name="AttrView">
        <attr name="txtColor" format="color" />
        <attr name="bgDrawable" format="reference" />
        <attr name="flag" format="boolean" />
    </declare-styleable>

    <style name="DefaultStyle">
        <item name="txtColor">@android:color/holo_green_dark</item>
        <item name="bgDrawable">@drawable/green_girl</item>
        <item name="flag">true</item>
    </style>

    <style name="AttrStyle">
        <item name="txtColor">@android:color/holo_green_dark</item>
        <item name="bgDrawable">@drawable/green_girl</item>
        <item name="flag">true</item>
    </style>

    <style name="app_MDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="dialog_animate">
        <item name="android:windowEnterAnimation">@anim/enter_translate_dialog</item>
        <item name="android:windowExitAnimation">@anim/exit_translate_dialog</item>
    </style>

    <declare-styleable name="FourCornerImageView">
        <attr name="f_corner_radius" format="dimension" />
        <attr name="left_top_radius" format="dimension" />
        <attr name="right_top_radius" format="dimension" />
        <attr name="left_bottom_radius" format="dimension" />
        <attr name="right_bottom_radius" format="dimension" />
    </declare-styleable>

    <style name="run_lab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">86dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:background">@drawable/run_lab_bg</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="android:textColor">@drawable/run_lab_selector</item>
        <item name="android:textSize">15dp</item>
    </style>

    <!-- 多主题 -->
    <style name="Dark">
        <item name="backgroundColor">@color/widget_gray</item>
        <item name="backgroundHeight">80dp</item>
        <item name="myFont">@font/woff</item>
    </style>

    <style name="Day">
        <item name="backgroundColor">@color/app_colorPrimary</item>
        <item name="backgroundHeight">100dp</item>
        <!--        <item name="myFont">@font/heavy</item>-->

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <declare-styleable name="StateLayout">
        <attr name="loadingView" format="reference" />
        <attr name="errorView" format="reference" />
        <attr name="emptyView" format="reference" />
        <attr name="noNetView" format="reference" />
        <attr name="contentView" format="reference" />
    </declare-styleable>

    <style name="MultipleStatusView" />

    <declare-styleable name="CircleProgressBar">
        <attr name="progressBgColor" format="color" />
        <attr name="progressColor" format="color" />
        <attr name="progressStrokeWidth" format="dimension" />
        <attr name="progress" format="integer" />
        <attr name="progressTotal" format="integer" />
        <attr name="exampleDrawable" format="color|reference" />
    </declare-styleable>

    <style name="MultipleStatusView.Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">#a9b7b7</item>
        <item name="android:textSize">16sp</item>
    </style>

    <declare-styleable name="RingView">
        <attr name="color" format="color" />
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="expandLines" format="integer" />
        <attr name="expandTextColor" format="color|reference" />
        <attr name="expandTextSize" format="dimension" />
        <attr name="expandEllipsize" format="string" />
    </declare-styleable>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FontStyle">
        <item name="android:fontFamily">@font/heavy</item>
    </style>

    <style name="dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:alwaysDrawnWithCache">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ShareTabText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DefaultTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_bg</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProgressDialogIndeterminateProgressbar">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/common_loading_indeterminate</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="NumberPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:textColorPrimary">#dd001b</item>
        <item name="android:textColorSecondary">#ffffff</item>
    </style>
</resources>
