<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ware.kt.KtActivity"
    tools:ignore="MissingConstraints">

    <Button
        android:id="@+id/mCoroutineModeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="coroutine mode"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/mCoroutineDispatcherView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="coroutine dispatcher"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@id/mCoroutineModeView" />

    <Button
        android:id="@+id/mCoroutineAsyncView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="coroutine async"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/mCoroutineModeView" />


</androidx.constraintlayout.widget.ConstraintLayout>