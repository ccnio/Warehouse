<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ware.media.CameraActivity"
    tools:ignore="MissingConstraints">


    <Button
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示" />

    <Button
        android:id="@+id/dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="消失" />

    <ImageView
        android:id="@+id/anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:src="@drawable/leaf_tip"
        android:text="Anchor"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/mToastView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NewToastEveryTime"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/show" />

    <Button
        android:id="@+id/mToastView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SameToastEveryTime"
        app:layout_constraintLeft_toRightOf="@id/mToastView1"
        app:layout_constraintTop_toBottomOf="@id/show" />

</androidx.constraintlayout.widget.ConstraintLayout>
