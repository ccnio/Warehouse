<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">


    <!-- 去除各边距   android:insetTop="0dp"-->
    <!--    android:insetBottom="0dp"-->
    <!--    android:minWidth="0dp"-->
    <!--    android:minHeight="0dp"-->
    <!--    android:padding="0dp"-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:text="material"
        android:textAllCaps="false"
        android:theme="@style/MaterialComponentsTheme"
        app:backgroundTint="@android:color/holo_green_dark"
        app:cornerRadius="8dp"
        app:rippleColor="@color/transparent"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="2.5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/green_girl"
        app:layout_constraintLeft_toRightOf="@id/materialButton"
        app:shapeAppearance="@style/StyleShapeAppearanceImage"
        app:strokeColor="@android:color/holo_red_dark"
        app:strokeWidth="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>