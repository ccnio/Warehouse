<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <Button
        android:id="@+id/mAlarmView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Start"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/startView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action start"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@id/mAlarmView" />

    <Button
        android:id="@+id/cancelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action Cancel"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@id/startView" />

</androidx.constraintlayout.widget.ConstraintLayout>